<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.LoginBoundary">
   <children>
      <VBox>
         <children>
            <AnchorPane>
               <children>
                  <GridPane alignment="center" hgap="10.0" prefHeight="244.0" prefWidth="408.0" vgap="10.0">
                      <padding>
                        <Insets bottom="40" left="40" right="40" top="40" />
                     </padding>
                      <columnConstraints>
                          <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
                          <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
        </ColumnConstraints>
                      </columnConstraints>
                      <children>
                  
                                                              <!-- Add Header Label -->
                          <Label text="LOGIN" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
                              <font>
                                  <Font name="Arial" size="24" />
                              </font>
                              <GridPane.margin>
                                  <Insets bottom="20.0" top="15.0" />
                              </GridPane.margin>
                          </Label>
                  
                                                
                                    
                                                        <!-- Add Name Label -->
                          <Label text="Nickname:  " GridPane.columnIndex="0" GridPane.rowIndex="1">
        </Label>
                          <!-- Add Name Text Field -->
                          <TextField fx:id="nicknameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                                                
                                    
                                                        <!-- Add Password Label -->
                          <Label text="Password:  " GridPane.columnIndex="0" GridPane.rowIndex="2">
        </Label>
                          <!-- Add Password Field -->
                          <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                      </children>
                      <rowConstraints>
                          <RowConstraints />
                          <RowConstraints />
                          <RowConstraints />
                      </rowConstraints>
                  </GridPane>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="120.0" prefWidth="408.0">
               <children>
                  <GridPane prefHeight="120.0" prefWidth="408.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                           <children>
                              <Button fx:id="loginButton" layoutX="50.0" layoutY="33.0" mnemonicParsing="false" onAction="#login" prefHeight="47.0" prefWidth="96.0" text="Login" />
                           </children>
                        </AnchorPane>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" GridPane.columnIndex="1">
                           <children>
                              <Button layoutX="46.0" layoutY="33.0" mnemonicParsing="false" onAction="#changeSignup" prefHeight="47.0" prefWidth="96.0" text="Signup" />
                           </children>
                        </AnchorPane>
                     </children>
                  </GridPane>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
