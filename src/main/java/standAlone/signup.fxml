<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.SignupBoundary">
   <children>
      <GridPane alignment="center" hgap="10" vgap="10">
          <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
         </padding>
          <columnConstraints>
              <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100">
        </ColumnConstraints>
              <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200">
        </ColumnConstraints>
          </columnConstraints>
         <children>
         
             <!-- Add Header Label -->
             <Label text="SIGN UP" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
                 <font>
                     <Font name="Arial" size="24" />
                 </font>
                 <GridPane.margin>
                     <Insets bottom="20" left="0" right="0" top="20" />
                 </GridPane.margin>
             </Label>
         
         
         
             <!-- Add Name Label -->
             <Label text="Nickname:  " GridPane.columnIndex="0" GridPane.rowIndex="1">
       </Label>
             <!-- Add Name Text Field -->
             <TextField fx:id="nicknameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
         
             <!-- Add Email Label -->
             <Label text="Email:  " GridPane.columnIndex="0" GridPane.rowIndex="2">
    </Label>
             <!-- Add Email Text Field -->
             <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         
         
         
             <!-- Add Password Label -->
             <Label text="Password:  " GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>
             <!-- Add Password Field -->
             <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         
         
             <!-- Add Submit Button -->
             <Button fx:id="submitButton" defaultButton="true" onAction="#signup" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.rowSpan="1">
                 <GridPane.margin>
                     <Insets bottom="20" left="0" right="0" top="20" />
                 </GridPane.margin>
             </Button>
            <Label text="Name:  " GridPane.rowIndex="4" />
            <Label text="Surname:  " GridPane.rowIndex="5" />
            <Label text="Gender:  " GridPane.rowIndex="6" />
            <ChoiceBox fx:id="genderField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="surnameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </children>
</AnchorPane>
